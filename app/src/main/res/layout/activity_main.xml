<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>-->
    <!--android:paddingTop="230dp"-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tiNombres"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/teNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombres" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiNacionalidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/teNacionalidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nacionalidad" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tiSexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/teSexo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sexo" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tiCategorizado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/teCategorizado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/categorizado" />
                        </android.support.design.widget.TextInputLayout>
                    </android.support.design.widget.TextInputLayout>
                </android.support.design.widget.TextInputLayout>
            </android.support.design.widget.TextInputLayout>

            <!-- Bottom Bar -->
            <Button
                android:id="@+id/btObtenerDatos"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Obtener Datos CVLAC"
                android:theme="@style/PrimaryFlatButton" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewListLineaInvestigacion"
                android:layout_width="match_parent"
                android:layout_height="600dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>


    <!--    <LinearLayout
            android:id="@+id/bottom_bar"
